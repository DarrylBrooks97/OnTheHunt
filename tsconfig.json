{
	"include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "**/*.d.ts"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2019"],
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2019",
		"strict": true,
		"paths": {
			"~/*": ["./app/*"],
			"~/server/*": ["./app/server/*"]
		},

		// Remix takes care of building everything in `remix build`.
		"noEmit": true
	}
}
